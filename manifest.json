{
    "manifest_version": 2,
    "name": "Lofi Music",
    "version": "1.0",
    "description": "Play random lofi music",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Lofi Music",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "https://www.youtube.com/*",
        "https://s.ytimg.com/*"
    ],
    "content_security_policy": "script-src 'self' 'wasm-unsafe-eval' https://www.youtube.com https://s.ytimg.com; object-src 'self'",
    "icons": {
        "48": "icon.png"
    }
}
